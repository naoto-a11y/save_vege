<% if farmer_signed_in? %>
  <h2>User info</h2>
  <%= image_tag farmer.get_profile_image %>
  <table class="w-100">
    <tr class="py-5">
      <th class="border-top py-3">name</th>
      <td class="border-top py-3"><%= farmer.last_name %></td>
    </tr>
    <tr>
      <th class="border-top py-3">introduction</th>
      <td class="border-top py-3"><%= farmer.introduction %></td>
    </tr>
    <tr>
      <th class="border-top py-3">Sales Address</th>
      <td class="border-top py-3"><%= farmer.seller_address %></td>
    </tr>
  </table>

  <%= link_to farmer_farmers_information_edit_path, class: "btn btn-outline-dark mt-5 mb-3 w-100" do %>
    編集する
  <% end %>
<% elsif customer_signed_in? %>

  <h2>User info</h2>
  <%= image_tag customer.get_profile_image %>
  <table class="w-100">
    <tr class="py-5">
      <th class="border-top py-3">name</th>
      <td class="border-top py-3"><%= customer.name %></td>
    </tr>
    <tr>
      <th class="border-top py-3">introduction</th>
      <td class="border-top py-3"><%= customer.introduction %></td>
    </tr>
    <tr>
      <th class="border-top py-3">follows</th>
      <td class="border-top py-3"><%= customer.followed_farmers %></td>
    </tr>
  </table>

  <%= link_to  customers_information_edit, class: "btn btn-outline-dark mt-5 mb-3 w-100" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
<% end %>