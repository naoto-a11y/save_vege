<div class="container-fluid px-5 mx-5 m-4">
  <div class="row mx-5 px-5">
    <div class="col-md-2 mr-5">
     <%= render 'public/tags/tag', tags: @tags %>
    </div>

    <div class="col-md-9 px-5">
      <h2>商品一覧</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-4">
            <%= render 'public/items/item', item: item %>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
