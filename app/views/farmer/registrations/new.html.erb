<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "farmer/shared/error_messages", resource: resource %>
  <table class="table table-borderless">
    <!-- 名前の欄  -->
    <tr>
      <td class="align-middle">
        <div class="d-flex justify-content-between">
          <span>名前</span>
          <span>(姓)</span>
        </div>
      </td>
      <td class="align-middle">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control" %>
      </td>
      <td class="align-middle">
        <div class="row align-items-center">
          <div class="col-2">
            <%= f.label :first_name, "(名)", class: "col-form-label mb-0" %>
          </div>
          <div class="col-10">
            <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子", class: "form-control" %>
          </div>
        </div>
      </td>
    </tr>
    <!-- フリガナの欄 -->
    <tr>
      <td class="align-middle">
        <div class="d-flex justify-content-between">
          <span>フリガナ</span>
          <span>セイ</span>
        </div>
      </td>
      <td class="align-middle">
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control" %>
      </td>
      <td class="align-middle">
        <div class="row align-items-center">
          <div class="col-2 text-nowrap">
            <%= f.label :first_name_kana, "メイ", class: "col-form-label mb-0" %>
          </div>
          <div class="col-10">
            <%= f.text_field :first_name_kana, autocomplete: "first_name", placeholder: "ミチコ", class: "form-control" %>
          </div>
        </div>
      </td>
    </tr>
    <!-- メールアドレスの欄 -->
    <tr>
      <td class="align-middle">メールアドレス</td>
      <td >
        <div class="align-middle">
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>
      </td>
    </tr>
   
    <!--パスワードの欄 -->
    <tr>
      <td class="align-middle">パスワード(6文字以上)</td>
      <td>
        <div class="align-middle">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </td>
    </tr>
    <!-- 確認用のパスワードの欄 -->
    <tr>
      <td class="align-middle">パスワード(確認用)</td>
      <td>
        <div class="align-middle">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </td>
    </tr>
    <!-- 新規登録ボタン -->
    <tfoot>
      <tr>
        <td></td>
        <td>
          <div  class="align-middle">
            <%= f.submit "新規登録", class: "btn btn-success w-100" %>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
<% end %>

<%= render "farmer/shared/links" %>
