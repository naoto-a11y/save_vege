<div class="card h-100 text-center">
  <%= link_to farmer_item_path(item.id) do %>
    <%= image_tag item.get_image, size: "300x300", class: "card-img-top" %>
  <% end %>

  <div class="card-body d-flex flex-column justify-content-between">
    <div>
      <h5 class="card-title"><%= item.name %></h5>
      <p class="card-text">¥<%= number_with_delimiter(item.price) %></p>

      <p class="mb-2">
        ❤️ <%= item.favorites.count %>
        💬 <%= item.comments.count %><br>
        <% item.tags.each do |tag| %>
          🔖<%= tag.tag_name %>
        <% end %>
      </p>
    </div>

    <div class="mt-auto">
      <%= link_to "詳細を見る", farmer_item_path(item.id), class: "btn btn-outline-primary btn-sm w-100 mb-2" %>

      <% if item.is_active == true %>
        <p class="text-success small">● 公開中</p>
      <% else %>
        <p class="text-secondary small">● 非公開</p>
      <% end %>
    </div>
  </div>
</div>
