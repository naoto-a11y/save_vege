<div class="container">
  <div class="row">
    <div class="col">
      <% if @item.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h1>野菜追加</h1>
      <%= form_with model: @item, url: farmer_items_path, local: true do |f| %>
        <div>
          <%= f.label :name, "追加したい野菜" %><br>
          <%= f.text_field :name %>
        </div>

        <div>
          <%= f.label :image, "画像ファイル" %><br>
          <%= f.file_field :image %>
        </div>

        <div>
          <%= f.label :price, "値段（円）" %><br>
          <%= f.number_field :price %>
        </div> 

        <div>
          <%= f.label :introduction, "紹介文" %><br>
          <%= f.text_area :introduction %>
        </div> 

        <div>
          <%= f.label :available_date, "受け取り可能日" %><br>
          <%= f.date_field :available_date %>
        </div>

        <div>
          <%= f.label :harvest_date, "収穫日（空白でも可）" %><br>
          <%= f.date_field :harvest_date %>
        </div>

        <div>
          <%= f.label :tag_names, "タグ（カンマ区切り" %><br>
          <%= f.text_field :tag_names, placeholder: "タグをつける。複数つけるには','で区切ってください。例) にんじん,甘い,旬" %>
        </div>

        <%= f.submit "投稿する" %>
      <% end %>
    </div>
  </div>
</div>
