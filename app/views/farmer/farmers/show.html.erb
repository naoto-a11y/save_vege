<div class="container-fluid px-5 mx-5 my-4">
  <div class="row">
    <!-- サイドバー：左 -->
    <div class="col-3">
      <%= render 'share/info', farmer: @farmer %>
      <%= link_to farmer_reservations_path, class: "btn btn-outline-dark w-100 my-2" do %>
        予約一覧（<%= @reservation_count %>）
      <% end %>
    </div>
    

    <!-- メインコンテンツ：右 -->
    <div class="col-9">
      <div class="row">
        <div class="col-md-11 px-5">
          <h2 class="mb-3">商品一覧（全 <%= @items_count %> 件）</h2>
          <div class="d-flex justify-content-end mb-4 mr-5">
            <%= link_to new_farmer_item_path, class: "btn btn-outline-success px-4 py-2 shadow-sm d-flex align-items-center" do %>
              野菜を追加する
            <% end %>
          </div>
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-4 mb-4">
                <%= render 'farmer/items/item', item: item %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

