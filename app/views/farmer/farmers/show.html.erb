<div class="container-fluid px-5 mx-5 m-4">
  <div class="row mx-5 px-5">
    <div class="col-md-2 mr-5">
      <%= render 'share/info', farmer: @farmer %>
    </div>

    <div class="col-md-9 px-5">
      <h2>商品一覧(全<%= @items_count %>件)</h2>
      <%= link_to "野菜を追加する", new_farmer_item_path, class: "btn btn-outline-brown " %>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-4">
            <%= render 'farmer/items/item', item: item %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
      
<h3>予約一覧</h3>
<% @reservations.each do |reservation| %>
  <p>
    商品名: <%= reservation.item.name %><br>
    購入者: <%= reservation.customer.name %><br>
    予約日: <%= l reservation.created_at %>
  </p>
<% end %>