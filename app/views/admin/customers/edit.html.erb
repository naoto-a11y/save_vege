<div class="container white-bg p-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="text-center mb-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

      <%= form_with model: @customer, url: admin_customer_path, local: true, method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>

        <table class="table table-borderless">

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></td>
            <td><%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %></td>
          </tr>

          <!-- 電話番号 -->
          <tr>
            <td class="align-middle">電話番号</td>
            <td><%= f.telephone_field :telephone_number, class: "form-control" %></td>
          </tr>

          <!-- メールアドレス -->
          <tr>
            <td class="align-middle">メールアドレス</td>
            <td>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :status, true %> <%= f.label :status, "有効" %>
              <%= f.radio_button :status, false %> <%= f.label :status, "退会" %>
            </td>
          </tr>

        </table>

        <div class="text-center mt-4">
          <%= f.submit "更新する", class: "btn btn-success px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>