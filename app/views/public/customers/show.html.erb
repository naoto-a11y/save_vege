<div class="container">
  <div class="row">
    <div class="col">
      
     <%= render 'public/customers/info', customer: @customer, reservations: @reservations, 
                                         following_farmers: @following_farmers, items: @items, 
                                         recent_items: @recent_items, recent_items_count: @recent_items_count,
                                          items_count: @items_count %>
      
      <% if params[:filter] == "liked" %>
        <h2 class="mb-4">いいねをつけた商品</h2>
      <% elsif params[:filter] == "commented" %>
        <h2 class="mb-4">最近コメントした商品</h2>
      <% else %>
      <h2 class="mb-4">いいねをつけた商品</h2>
      <% end %>

      <div class="row">
        <% @filtered_items.each do |item| %>
          <div class="col-md-3 mb-4">
            <%= render 'public/items/item', item: item %>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>



