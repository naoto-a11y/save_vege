<div class="container-fluid px-5 mx-5 m-4">
  <div class="row mx-5 px-5">
    <div class="col-md-2 mr-5">
      <%= render 'share/info', customer: @customer %>
      <%= link_to "予約一覧", reservations_path, class: "btn btn-outline-brown " %>
    </div>

    <div class="col-md-4 px-5">
      <%= image_tag @item.get_image %>
    </div>

    <div class="col-md-5 px-3">
        <div>
          <h2><%= @item.name %></h2>
          <p class="my-5"><%= @item.introduction %></p>
          <p class="my-5"><span class="h4">￥<%= number_to_currency(@item.price) %></span>(税込)</p>
        </div>
    </div>
    <div class="col-md-9 offset-md-2 mt-4">
      <p>コメント一覧</p>
      <% @comments.each do |comment| %>
        <%= comment.comment %>
      <% end %>
    </div>
  </div>
</div>


