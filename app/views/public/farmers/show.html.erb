<div class="container-fluid px-5 mx-5 my-4">
  <div class="row">
    <!-- サイドバー：左 -->
    <div class="col-3">
      <%= render 'public/farmers/public_farmer', farmer: @farmer %>
      <%= render 'public/tags/tag', tags: @tags %>
    </div>

    <!-- メインコンテンツ：右 -->
    <div class="col-9">
    <h2>商品一覧</h2>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4">
          <%= render 'public/items/item', item: item %>
        </div>
      <% end %>
    </div>
      
    </div>
  </div>
</div>

